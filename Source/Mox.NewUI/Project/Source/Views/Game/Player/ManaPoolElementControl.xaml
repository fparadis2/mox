<UserControl x:Class="Mox.UI.Game.ManaPoolElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UI="clr-namespace:Mox.UI"
             mc:Ignorable="d">
	<UserControl.Resources>
		<BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
	</UserControl.Resources>
    <Grid>
    	<Button Content="{Binding TempName}" Visibility="{Binding Path=IsNotEmpty, Converter={StaticResource booleanToVisibilityConverter}}" UI:ButtonAction.BindTo="PayMana" />
    </Grid>
</UserControl>
