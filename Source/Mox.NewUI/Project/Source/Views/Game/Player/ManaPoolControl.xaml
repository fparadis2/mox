<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Mox.UI.Game"
    xmlns:UI="clr-namespace:Mox.UI"
    xmlns:Mox="clr-namespace:Mox;assembly=Mox.Engine"
	mc:Ignorable="d"
	x:Class="Mox.UI.Game.ManaPoolControl"
	x:Name="UserControl"
    UI:DesignTime.DataContext="{x:Type local:ManaPoolViewModel_DesignTime}">

    <StackPanel>
        <local:ManaPoolElementControl DataContext="{Binding White}" />
        <local:ManaPoolElementControl DataContext="{Binding Blue}" />
        <local:ManaPoolElementControl DataContext="{Binding Black}" />
        <local:ManaPoolElementControl DataContext="{Binding Red}" />
        <local:ManaPoolElementControl DataContext="{Binding Green}" />
        <local:ManaPoolElementControl DataContext="{Binding Colorless}" />
    </StackPanel>
</UserControl>