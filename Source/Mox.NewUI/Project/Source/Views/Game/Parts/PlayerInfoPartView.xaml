<UserControl x:Class="Mox.UI.Game.PlayerInfoPartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mox.UI.Game"
             xmlns:UI="clr-namespace:Mox.UI"
             mc:Ignorable="d" 
             d:DesignHeight="496" d:DesignWidth="271"
             UI:DesignTime.DataContext="{x:Type local:PlayerInfoPartViewModel_DesignTime}">
    
    <Border Width="200" Background="{DynamicResource ButtonDefaultBrush}" CornerRadius="3">
    	<Grid>
    		<Grid.RowDefinitions>
    			<RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
    		</Grid.RowDefinitions>
    		<local:PlayerInfoControl DataContext="{Binding Game.OpponentPlayer}" Grid.Row="0" Margin="2" />
            <!--<local:StackControl DataContext="{Binding Game.Stack}" Grid.Row="1" HorizontalAlignment="Left" Margin="2" />-->
            <local:PlayerInfoControl DataContext="{Binding Game.MainPlayer}" Grid.Row="2" Margin="2" />
        </Grid>
    </Border>    
</UserControl>
