<UserControl x:Class="Mox.UI.Game.GameBottomPartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mox.UI.Game"
             xmlns:lobby="clr-namespace:Mox.UI.Lobby"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
    	<TabControl>
    		<TabItem Header="Chat" IsSelected="True">
    			<lobby:LobbyChatView DataContext="{Binding Lobby.Chat}" />
            </TabItem>
            <TabItem Header="Console" IsSelected="True">
                <lobby:LobbyServerMessagesView DataContext="{Binding Lobby.ServerMessages}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
