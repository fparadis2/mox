<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Mox.UI.Browser.ImportDeckWindow"
    xmlns:UI="clr-namespace:Mox.UI"
    xmlns:local="clr-namespace:Mox.UI.Browser"
	x:Name="Window"
	Title="Import Deck..."
	Width="640" Height="480"
    Background="{DynamicResource DialogBackgroundBrush}"
    UI:DesignTime.DataContext="{x:Type local:ImportDeckViewModel_DesignTime}">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="Courier New" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="4" />
        <TextBlock Grid.Row="1" Text="{Binding Error}" Foreground="#FFBC0606" VerticalAlignment="Center" Margin="4" />
        <UniformGrid Grid.Row="1" HorizontalAlignment="Right" Rows="1" Margin="4">
            <Button IsDefault="True" Content="Import" Width="75" Height="23" IsEnabled="{Binding CanImport}" Click="Button_Click" />
            <Button IsCancel="True" Content="Cancel" Width="75" Height="23" Margin="{StaticResource DefaultLeftMargin}" />
        </UniformGrid>
    </Grid>
</Window>