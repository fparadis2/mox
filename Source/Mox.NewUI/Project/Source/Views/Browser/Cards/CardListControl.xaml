<UserControl x:Class="Mox.UI.Browser.CardListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UI="clr-namespace:Mox.UI"
             xmlns:local="clr-namespace:Mox.UI.Browser"
             mc:Ignorable="d" 
             d:DesignHeight="442" d:DesignWidth="545"
             UI:DesignTime.DataContext="{x:Type local:CardCollectionViewModel_DesignTime}">
	
    <UserControl.Resources>    	
        <DataTemplate x:Key="CardDataTemplate">
        	<local:CardControl UI:DragSourceBehavior.DragSource="{Binding DragSource}" />
        </DataTemplate>
    </UserControl.Resources>
    
    <DockPanel>
    	<UI:SearchTextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Top" Margin="1"/>
        <ListBox
            Margin="1"
            UI:DragSourceBehavior.CanDrag="True"
			VirtualizingStackPanel.IsVirtualizing="True" 
			VirtualizingStackPanel.VirtualizationMode="Recycling" 
			ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
			ItemsSource="{Binding CardsViewSource.View}"
            ItemTemplate="{StaticResource CardDataTemplate}" />
    </DockPanel>
</UserControl>
