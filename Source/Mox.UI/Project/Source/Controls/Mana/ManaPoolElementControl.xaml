<Button
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Mox.UI.ManaPoolElementControl"
	x:Name="UserControl"
	d:DesignWidth="285" d:DesignHeight="305" xmlns:local="clr-namespace:Mox.UI"
    Style="{DynamicResource ManaPoolElementStyle}">

	<Button.Resources>
    
		<local:ColorToManaSymbolConverter x:Key="ColorToManaSymbolConverter"/>
				
        <Style x:Key="ManaPoolElementStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <StackPanel x:Name="LayoutRoot" Orientation="Horizontal">
                            <local:ManaSymbolControl ManaSymbol="{Binding Path=CommandParameter, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorToManaSymbolConverter}}" Width="15" Height="15" Margin="0,0,5,0"/>
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Button.Resources>
</Button>