<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Mox.UI.Browser" 
	mc:Ignorable="d"
	x:Class="Mox.UI.Browser.DeckCardControl"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid Background="Transparent">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
            <ColumnDefinition />
	    </Grid.ColumnDefinitions>
        <local:CardControl Grid.Column="1" CardControlStyle="Simple" />
        <TextBlock Width="50" Text="{Binding Quantity}" FontWeight="Bold" FontSize="28" VerticalAlignment="Center" TextAlignment="Right" Margin="0,0,4,0" />
    </Grid>
</UserControl>