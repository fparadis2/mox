<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mox.UI.Browser" 
             xmlns:UI="clr-namespace:Mox.UI"
             x:Class="Mox.UI.Browser.EditDeckControl" 
             mc:Ignorable="d" 
             d:DesignHeight="397" d:DesignWidth="479">
	
    <UI:DesignTime.DataContext>
        <local:DesignTimeDeckViewModel />
    </UI:DesignTime.DataContext>
    
    <UserControl.Resources>
        <DataTemplate x:Key="CardDataTemplate">
        	<Grid>
        	   <local:CardControl />
               <TextBlock FontWeight="Bold" FontSize="36" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Text="{Binding Quantity}" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    <DockPanel>
            
    	<local:EditDeckDetailsControl DockPanel.Dock="Top" />
        
        <ListBox
			VirtualizingStackPanel.IsVirtualizing="True" 
			VirtualizingStackPanel.VirtualizationMode="Recycling" 
			ScrollViewer.IsDeferredScrollingEnabled="True"
			ScrollViewer.CanContentScroll="True"
			ItemsSource="{Binding CardsViewSource.View}"
            ItemContainerStyle="{DynamicResource CardBrowser_CardListBox_ItemStyle}" 
            ItemTemplate="{DynamicResource CardDataTemplate}" />
            
    </DockPanel>
</UserControl>
