<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:UI="clr-namespace:Mox.UI" 
    xmlns:local="clr-namespace:Mox.UI.Browser" 
    mc:Ignorable="d"
	x:Class="Mox.UI.Browser.BrowseDecksPage"
	x:Name="UserControl"
	d:DesignWidth="755" d:DesignHeight="461">
	
    <UI:DesignTime.DataContext>
        <local:DesignTimeBrowseDecksPageViewModel />
    </UI:DesignTime.DataContext>

    <local:PageFrame>
    	<Grid>
    		<Grid.ColumnDefinitions>
    			<ColumnDefinition Width="*"/>
    			<ColumnDefinition Width="*"/>
    		</Grid.ColumnDefinitions>
            <DockPanel Margin="2">
            	<StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            		<Button Content="New..." Click="NewDeck_Click" Margin="0,2,2,2" Width="75" />
            		<Button Content="Import..." Click="ImportDeck_Click" Margin="0,2,2,2" Width="75" />
            	</StackPanel>
            	<local:DeckListBox DataContext="{Binding Library}"/>
            </DockPanel>
            <local:EditDeckControl Grid.Column="1" Margin="2" DataContext="{Binding Library.SelectedDeck}" />
    	</Grid>
    </local:PageFrame>
</UserControl>