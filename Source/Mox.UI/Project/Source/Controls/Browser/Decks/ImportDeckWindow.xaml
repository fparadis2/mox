<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UI="clr-namespace:Mox.UI" 
    xmlns:local="clr-namespace:Mox.UI.Browser" 
	x:Class="Mox.UI.ImportDeckWindow"
	x:Name="Window"
	Title="Import Deck..."
	Width="640" Height="480">
	
    <UI:DesignTime.DataContext>
        <local:DesignTimeImportDeckViewModel />
    </UI:DesignTime.DataContext>

	<Grid x:Name="LayoutRoot">
		<Grid.Background>
			<SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkColorKey}}"/>
		</Grid.Background>
		<TextBox Text="{Binding Text, Mode=TwoWay}" Margin="8,8,8,39" FontFamily="Courier New" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
		<Button IsDefault="True" Content="Import" HorizontalAlignment="Right" Margin="8" VerticalAlignment="Bottom" Width="75"
                IsEnabled="{Binding CanImport}" Click="Button_Click" />
        <Button IsCancel="True" Content="Cancel" HorizontalAlignment="Right" Margin="8,8,90,8" VerticalAlignment="Bottom" Width="75" />
        <TextBlock Height="25" Text="{Binding Error}" Margin="8,0,173,8" VerticalAlignment="Bottom" Foreground="Red" FontSize="14.667" />
	</Grid>
</Window>