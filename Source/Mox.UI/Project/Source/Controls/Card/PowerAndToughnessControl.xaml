<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Mox.UI"
	mc:Ignorable="d"
	x:Class="Mox.UI.PowerAndToughnessControl"
	x:Name="UserControl"
	d:DesignWidth="605" d:DesignHeight="338">
		
	<local:DesignTime.DataContext>
		<local:DesignTimeCardViewModel />
	</local:DesignTime.DataContext>

	<Grid>
		<Viewbox Stretch="Fill">
			<Border CornerRadius="5,5,5,5" BorderThickness="3" Background="#FFCACACA" BorderBrush="#FF000000">
				<Viewbox Stretch="Uniform">
					<StackPanel Orientation="Horizontal" >
                        <TextBlock FontSize="24" FontWeight="Bold" Margin="0,0,0,0" FontFamily="Arial Black">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="Power" />
                                    <Binding Path="Toughness" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
					</StackPanel>
				</Viewbox>
			</Border>
		</Viewbox>		
	</Grid>
</UserControl>