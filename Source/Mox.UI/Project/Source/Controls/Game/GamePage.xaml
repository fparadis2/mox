<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    xmlns:local="clr-namespace:Mox.UI"
	x:Class="Mox.UI.GamePage"
	x:Name="Page"
	FlowDirection="LeftToRight" d:DesignWidth="687" d:DesignHeight="498" Background="Black">

	<local:DesignTime.DataContext>
        <local:DesignTimeGameViewModel />
    </local:DesignTime.DataContext>
    
    <Grid>
        <local:PlayBackground />
        <Grid>
        	<Grid.RowDefinitions>
        		<RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
        	</Grid.RowDefinitions>
            <local:BattlefieldControl Grid.Row="0" VerticalAlignment="Bottom" Margin="10,10,10,10" DataContext="{Binding Path=Players[1].Battlefield}" />
            <local:BattlefieldControl Grid.Row="1" VerticalAlignment="Top"    Margin="10,10,10,10" DataContext="{Binding Path=MainPlayer.Battlefield}" />
        </Grid>
        <local:GameControl />
    </Grid>
</UserControl>