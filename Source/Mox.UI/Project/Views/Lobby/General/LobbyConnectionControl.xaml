<UserControl x:Class="Mox.UI.Lobby.LobbyConnectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lobby="clr-namespace:Mox.UI.Lobby"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance {x:Type lobby:LobbyViewModel_DesignTime}, IsDesignTimeCreatable=True}">
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding CloseCommand}" Style="{DynamicResource ChromelessButtonStyle}">
            <fa:FontAwesome Icon="SignOut" ToolTip="Disconnect" VerticalAlignment="Center" FontSize="15" />
        </Button>

        <TextBlock Text="{Binding ServerName}" Margin="8 0" VerticalAlignment="Center" />
    </StackPanel>
</UserControl>
