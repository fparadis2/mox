<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:Mox.UI">

    <Style x:Key="MetroSeparatorStyle" TargetType="ui:MetroSeparator">
        <Setter Property="Foreground" Value="{DynamicResource SeparatorBackgroundBrush}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="8 4" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ui:MetroSeparator">
                    <Rectangle Fill="{TemplateBinding Foreground}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ui:MetroSeparator" BasedOn="{StaticResource MetroSeparatorStyle}" />

</ResourceDictionary>