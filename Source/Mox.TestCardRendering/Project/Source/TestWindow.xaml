<Window x:Class="Mox.TestCardRendering.Source.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestWindow" Height="800" Width="800">
    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" x:Name="original" Orientation="Vertical" />
                <StackPanel Grid.Column="1" x:Name="generated" Orientation="Vertical" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
